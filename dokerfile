# Sử dụng hình ảnh cơ sở Python 3.8
FROM python:3.8-slim-buster

# Thiết lập thư mục làm việc
WORKDIR /app

# Sao chép các tệp yêu cầu và cài đặt các gói cần thiết
COPY requirements.txt requirements.txt
RUN pip install -r requirements.txt

# Sao chép tất cả các tệp khác vào thư mục làm việc
COPY . .

# Thiết lập biến môi trường
ENV FLASK_APP=app.py
ENV FLASK_RUN_HOST=0.0.0.0

# Mở cổng 5000
EXPOSE 5000

# Chạy ứng dụng
CMD ["flask", "run"]
